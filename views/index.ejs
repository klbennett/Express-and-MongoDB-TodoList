<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Todo List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="assets/styles.css">
</head>
<body>
    <div id="todo-table">
        <form>
            <input type="text" name="item" placeholder="Add new item" method="post" action="/addtodo" required/>
            <button type="submit">Add Item</button>
        </form>
        <% todos.forEach(todo => { %>
            <a href="/todo/<%= todo.id %>" class="list-group-item">
              <h4 class="list-group-item-heading"><%= todo.todo %></h4>
            </a>
          <% }) %>
    </div>
    
</body>
</html>